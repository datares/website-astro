---
import Hero from "../components/Hero.astro";
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout title={`UCLA DataRes | ${frontmatter.title}`} desc={frontmatter.subtitle}>
  <Hero>
    <h1>{frontmatter.title}</h1>
    {frontmatter.subtitle ? <p>{frontmatter.subtitle}</p> : null}
  </Hero>
  <div class="px-10">
    <div class={`prose ${frontmatter.max_w ? frontmatter.max_w : ""} mx-auto my-10 ${frontmatter.centered ? "prose-headings:text-center" : ""}`}>
      <slot />
    </div>
  </div>
</BaseLayout>

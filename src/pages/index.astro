---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import Card from "../components/Card.astro";
const desc =
  "At DataRes, we solve problems and craft stories with data. We \
provide a platform for aspiring data scientists and analysts to collaborate on \
impactful data projects. If you love playing with data, creating \
powerful visualizations, or building predictive models, you have a home \
at DataRes.";
---

<BaseLayout title="UCLA DataRes" desc={desc}>
  <div class="w-full">
    <Hero color="bg-gradient-to-br from-[#d22f40] via-[#fdbd32] to-[#5ec0bc]" invert>
      <div class="flex flex-col items-start w-full max-w-[90rem] mx-auto">
        <div class="w-full bg-white/20 backdrop-blur-md p-8 rounded-xl border border-white/30 shadow-2xl">
          <div class="font-serif">
            <div class="flex items-baseline gap-3 mb-3">
              <span class="text-3xl md:text-4xl font-bold text-white drop-shadow-lg">DataRes</span>
              <span class="text-lg italic text-white/95">/ˈdɑːtə rɛs/</span>
            </div>
            
            <p class="text-sm italic text-white/90 mb-2">noun</p>
            
            <p class="text-lg md:text-xl leading-relaxed mb-4 text-white font-medium">
              A data science club emphasized on community through putting our members first— with both professional and social opportunities.
            </p>
            
            <div class="border-t border-white/30 pt-4">
              <p class="text-sm italic text-white/90 mb-2">synonyms</p>
              <div class="flex flex-wrap gap-3">
                <span class="px-4 py-2 bg-white/20 rounded-full text-sm hover:bg-white/30 transition-all duration-300 text-white font-medium shadow-sm">consulting</span>
                <span class="px-4 py-2 bg-white/20 rounded-full text-sm hover:bg-white/30 transition-all duration-300 text-white font-medium shadow-sm">research</span>
                <span class="px-4 py-2 bg-white/20 rounded-full text-sm hover:bg-white/30 transition-all duration-300 text-white font-medium shadow-sm">deep learning</span>
                <span class="px-4 py-2 bg-white/20 rounded-full text-sm hover:bg-white/30 transition-all duration-300 text-white font-medium shadow-sm">data visualization</span>
                <span class="px-4 py-2 bg-white/20 rounded-full text-sm hover:bg-white/30 transition-all duration-300 text-white font-medium shadow-sm">life long friends</span>
              </div>
            </div>
          </div>
          <div class="border-t border-white/30 mt-8 pt-6">
            <p class="text-xl md:text-2xl leading-relaxed font-bold text-white drop-shadow-md">
              If you love playing with data, creating powerful visualizations, or building predictive models, you have a home at DataRes.
            </p>
          </div>
        </div>
      </div>
    </Hero>

    <div class="mx-auto w-full max-w-[90rem] px-6 lg:px-12 py-20" id="branches">
      <h1 class="text-center font-extrabold text-4xl md:text-5xl mb-12 bg-gradient-to-r from-[#d22f40] to-[#5ec0bc] bg-clip-text text-transparent">Branches</h1>
      <div class="flex flex-wrap justify-center gap-10">
        <Card
          image="/assets/images/datablog.svg"
          href="/teams/datablog"
          alt="data blog team"
        >
          <div class="text-2xl font-bold mb-3 text-gray-900">Data Blog</div>
          <p class="text-gray-700 text-lg">Creating data-backed narratives</p>
        </Card>
        <Card
          image="/assets/images/research.svg"
          href="/teams/research"
          alt="research team"
        >
          <div class="text-2xl font-bold mb-3 text-gray-900">Research</div>
          <p class="text-gray-700 text-lg">
            Pushing the limits of machine learning
          </p>
        </Card>
        <Card
          image="/assets/images/consulting.svg"
          href="/teams/consulting"
          alt="consulting team"
        >
          <div class="text-2xl font-bold mb-3 text-gray-900">Consulting</div>
          <p class="text-gray-700 text-lg">
            Developing data-driven solutions
          </p>
        </Card>
      </div>
    </div>

    <Hero color="bg-gradient-to-br from-[#5ec0bc] to-[#d22f40]" invert>
      <div class="w-full text-center">
        <h2 class="text-2xl md:text-3xl font-bold text-white mb-6 drop-shadow-lg">Want to stay up to date with all the latest DataRes news?</h2>
        <a
          class="inline-block bg-white hover:bg-gray-50 text-[#d22f40] font-bold py-3 px-8 rounded-full transition-all duration-300 shadow-lg hover:shadow-xl"
          href="https://ucladatares.us14.list-manage.com/subscribe?u=d8a2e69c43a898058be10fcdb&id=f153c9e211"
        >
          Join our Mailing List!
        </a>
      </div>
    </Hero>
  </div>
</BaseLayout>

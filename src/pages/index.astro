---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import Card from "../components/Card.astro";
const desc =
  "At DataRes, we solve problems and craft stories with data. We \
provide a platform for aspiring data scientists and analysts to collaborate on \
impactful data projects. If you love playing with data, creating \
powerful visualizations, or building predictive models, you have a home \
at DataRes.";
---

<BaseLayout title="UCLA DataRes" desc={desc}>
  <div>
    <Hero color="bg-quaternary-light" invert>
      <div class="flex flex-col md:flex-row items-start md:items-center gap-12 w-full max-w-[90rem] mx-auto px-8">
        <div class="flex-1 min-w-[45%]">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">Welcome to the home of Data Science at UCLA</h1>
          <p class="text-lg md:text-xl max-w-2xl">{desc}</p>
        </div>
        <div class="flex-1 min-w-[35%] bg-quaternary-light/50 p-10 rounded-lg border border-white/20">
          <div class="font-serif">
            <p class="text-2xl md:text-3xl mb-4">
              <span class="font-bold">DataRes</span> 
              <span class="text-base md:text-lg italic ml-3">/ˈdɑːtə rɛs/</span>
            </p>
            <p class="text-sm md:text-base italic mb-4 text-grey-700">noun</p>
            <p class="text-lg md:text-xl leading-relaxed mb-6">
              A data science club fostering community by putting our members first- with both professional and social opportunities.
            </p>
            <div class="border-t border-white/20 pt-4">
              <p class="text-sm md:text-base italic mb-3 text-grey-700">synonyms</p>
              <div class="flex flex-wrap gap-2">
                <span class="px-3 py-1 bg-white/10 rounded-full text-sm md:text-base">consulting</span>
                <span class="px-3 py-1 bg-white/10 rounded-full text-sm md:text-base">research</span>
                <span class="px-3 py-1 bg-white/10 rounded-full text-sm md:text-base">deep learning</span>
                <span class="px-3 py-1 bg-white/10 rounded-full text-sm md:text-base">data visualization</span>
                <span class="px-3 py-1 bg-white/10 rounded-full text-sm md:text-base">insights</span>
                <span class="px-3 py-1 bg-white/10 rounded-full text-sm md:text-base">life long friends</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </Hero>
    <div class="mx-auto max-w-6xl my-10 py-10" id="branches">
      <h1 class="text-center font-extrabold text-4xl mb-10">Branches</h1>
      <div class="flex flex-wrap justify-center my-10 [&>*]:flex-none">
        <Card
          image="/assets/images/datablog.svg"
          href="/teams/datablog"
          alt="data blog team"
        >
          <div class="text-xl font-bold mb-2">Data Blog</div>
          <p class="text-grey-700 text-base">Creating data-backed narratives</p>
        </Card>
        <Card
          image="/assets/images/research.svg"
          href="/teams/research"
          alt="research team"
        >
          <div class="text-xl font-bold mb-2">Research</div>
          <p class="text-grey-700 text-base">
            Pushing the limits of machine learning
          </p>
        </Card>
        <Card
          image="/assets/images/consulting.svg"
          href="/teams/consulting"
          alt="consulting team"
        >
          <div class="text-xl font-bold mb-2">Consulting</div>
          <p class="text-grey-700 text-base">
            Developing data-driven solutions
          </p>
        </Card>
      </div>
    </div>
    <Hero color="bg-secondary-light" invert>
      <b>Want to stay up to date with all the latest DataRes news?</b>
      <br />
      <br />
      <a
        class="bg-secondary hover:bg-secondary-dark py-2 px-4 rounded no-underline"
        href="https://ucladatares.us14.list-manage.com/subscribe?u=d8a2e69c43a898058be10fcdb&id=f153c9e211"
      >
        Join our Mailing List!
      </a>
    </Hero>
  </div>
</BaseLayout>

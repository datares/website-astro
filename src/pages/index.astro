---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import Card from "../components/Card.astro";
const desc =
  "At DataRes, we solve problems and craft stories with data. We \
provide a platform for aspiring data scientists and analysts to collaborate on \
impactful data projects. If you love playing with data, creating \
powerful visualizations, or building predictive models, you have a home \
at DataRes.";
---

<BaseLayout title="UCLA DataRes" desc={desc}>
  <div class="w-full">
    <Hero color="bg-gradient-to-br from-[#d22f40] via-[#fdbd32] to-[#5ec0bc]" invert>
      <div class="flex flex-col items-start w-full max-w-[90rem] mx-auto">
        <div class="w-full bg-white/10 backdrop-blur-sm p-4 rounded-lg border border-white/20 shadow-lg">
          <div class="font-serif">
            <div class="flex items-baseline gap-3 mb-1">
              <span class="text-2xl md:text-3xl font-bold text-black">DataRes</span>
              <span class="text-base italic text-gray-800">/ˈdɑːtə rɛs/</span>
            </div>
            
            <p class="text-sm italic text-gray-800 mb-1">noun</p>
            
            <p class="text-base md:text-lg leading-relaxed mb-2 text-gray-700">
              A data science club fostering community by putting our members first—with both professional and social opportunities.
            </p>
            
            <div class="border-t border-white/20 pt-2">
              <p class="text-sm italic text-gray-800 mb-1">synonyms</p>
              <div class="flex flex-wrap gap-2">
                <span class="px-3 py-1 bg-white/10 rounded-full text-sm hover:bg-white/20 transition-colors text-black">consulting</span>
                <span class="px-3 py-1 bg-white/10 rounded-full text-sm hover:bg-white/20 transition-colors text-black">research</span>
                <span class="px-3 py-1 bg-white/10 rounded-full text-sm hover:bg-white/20 transition-colors text-black">deep learning</span>
                <span class="px-3 py-1 bg-white/10 rounded-full text-sm hover:bg-white/20 transition-colors text-black">data visualization</span>
                <span class="px-3 py-1 bg-white/10 rounded-full text-sm hover:bg-white/20 transition-colors text-black">life long friends</span>
              </div>
            </div>
          </div>
          <div class="border-t border-white/20 mt-6 pt-6">
            <p class="text-lg md:text-xl leading-relaxed font-bold text-gray-700">
              If you love playing with data, creating powerful visualizations, or building predictive models, you have a home at DataRes.
            </p>
          </div>
        </div>
      </div>
    </Hero>

    <div class="mx-auto w-full max-w-[90rem] px-6 lg:px-12 py-16" id="branches">
      <h1 class="text-center font-extrabold text-4xl mb-10">Branches</h1>
      <div class="flex flex-wrap justify-center gap-8">
        <Card
          image="/assets/images/datablog.svg"
          href="/teams/datablog"
          alt="data blog team"
        >
          <div class="text-xl font-bold mb-2">Data Blog</div>
          <p class="text-grey-700 text-base">Creating data-backed narratives</p>
        </Card>
        <Card
          image="/assets/images/research.svg"
          href="/teams/research"
          alt="research team"
        >
          <div class="text-xl font-bold mb-2">Research</div>
          <p class="text-grey-700 text-base">
            Pushing the limits of machine learning
          </p>
        </Card>
        <Card
          image="/assets/images/consulting.svg"
          href="/teams/consulting"
          alt="consulting team"
        >
          <div class="text-xl font-bold mb-2">Consulting</div>
          <p class="text-grey-700 text-base">
            Developing data-driven solutions
          </p>
        </Card>
      </div>
    </div>

    <Hero color="bg-secondary-light" invert>
      <div class="w-full">
        <b>Want to stay up to date with all the latest DataRes news?</b>
        <br />
        <br />
        <a
          class="bg-secondary hover:bg-secondary-dark py-2 px-4 rounded no-underline"
          href="https://ucladatares.us14.list-manage.com/subscribe?u=d8a2e69c43a898058be10fcdb&id=f153c9e211"
        >
          Join our Mailing List!
        </a>
      </div>
    </Hero>
  </div>
</BaseLayout>
